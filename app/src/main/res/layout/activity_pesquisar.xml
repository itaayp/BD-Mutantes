<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorYellow"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true">
    </ListView>

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:textColor="@color/colorBlue"
        android:layout_below="@id/list"
        android:hint="@string/nome_mutante"
        android:singleLine="true"
        android:inputType="textPersonName"
        android:imeOptions="actionSearch">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnNome"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/colorBlue"
        android:textColor="@color/colorYellow"
        android:layout_below="@+id/input"
        android:onClick="pesquisarNome"
        android:text="@string/pesquisar_por_nome" />

    <Button
        android:id="@+id/btnHabilidade"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/colorBlue"
        android:textColor="@color/colorYellow"
        android:layout_below="@+id/btnNome"
        android:onClick="pesquisarHabilidade"
        android:text="@string/skills_mutante" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:backgroundTint="@color/colorBlue"
        android:textColor="@color/colorYellow"
        android:onClick="voltarPesquisar"
        android:text="@string/voltar" />

</RelativeLayout>