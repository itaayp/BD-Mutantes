<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@android:id/list"
    tools:context=".BuscarActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnHabilidade"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnNome"
        android:layout_alignParentEnd="true"
        android:onClick="pesquisarHabilidade"
        android:text="Pesquisar por poder" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="383dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp"></ListView>

    <Button
        android:id="@+id/btnNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/input"
        android:onClick="pesquisarNome"
        android:text="Pesquisar por nome" />
</RelativeLayout>