<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastrarActivity">

    <EditText
        android:id="@+id/mutanteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:ems="10"
        android:hint="Nome do mutante"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="63dp" />

    <EditText
        android:id="@+id/mutanteSkills"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:ems="10"
        android:hint="Habilidades do mutante \n(separadas por ';' )"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="133dp" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/mutanteName"
        android:layout_marginBottom="203dp"
        android:onClick="salvar"
        android:text="Salvar"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="259dp" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/mutanteName"
        android:layout_alignTop="@+id/btnSalvar"
        android:onClick="voltar"
        android:text="Voltar"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="259dp" />
</RelativeLayout>