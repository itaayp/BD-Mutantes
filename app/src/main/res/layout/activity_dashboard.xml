<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorYellow"
    tools:context=".DashboardActivity">

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/colorBlue"
        android:contentDescription="@string/cadastrar"
        android:onClick="telaCadastrar"
        android:text="@string/cadastrar"
        android:textColor="@color/colorYellow" />

    <Button
        android:id="@+id/btnListar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/btnCadastrar"
        android:onClick="telaListar"
        android:text="@string/listar"
        android:backgroundTint="@color/colorBlue"
        android:textColor="@color/colorYellow"/>

    <Button
        android:id="@+id/btnPesquisar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/btnListar"
        android:onClick="telaPesquisar"
        android:text="@string/pesquisar"
        android:backgroundTint="@color/colorBlue"
        android:textColor="@color/colorYellow" />

    <Button
        android:id="@+id/btnFechar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:contentDescription="fechar"
        android:onClick="fechar"
        android:text="@string/fechar"
        android:backgroundTint="@color/colorBlue"
        android:textColor="@color/colorYellow" />
</RelativeLayout>